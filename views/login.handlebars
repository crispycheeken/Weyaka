<!DOCTYPE html>

<html>
<head>
	<title>Weyaka - Login</title>
	<meta charset="utf-8">
	<meta name="viewport" content="width=device-width, initial-scale=1.0">

	<!-- Import CSS -->
	<link href="css/bootstrap.css" rel="stylesheet">
	<link href="css/flat-ui.css" rel="stylesheet">
	<link href="css/global.css" rel="stylesheet">
   
</head>

<body id="login-body">
	<div class="container">
		<!-- JUMBOTRON HEADER -->
		<div class="jumbotron">
			<h1>Weyaka<h1>
		</div>

		<div class="login-form">
			<!-- LOGIN FORM -->
			<form role="form" method="post" action="/home">
				<!-- USERNAME -->
			    <div class="form-group">
			    	<input type="text" class="form-control login-field" id="login-user" placeholder="Username">
			    	<label class="login-field-icon fui-user" for"login-user"></label>
			    </div>

			    <!-- PASSWORD -->
			    <div class="form-group">
			    	<input type="password" class="form-control login-field" id="login-pass" placeholder="Password">
			    	<label class="login-field-icon fui-lock" for="login-pass"></label>
			    </div>

			    <!-- LOGIN BUTTON -->
			    <button type="submit" class="btn btn-primary btn-hg btn-block" id="login-btn">See my day!</button>

			    <!-- FORGOT PASSWORD -->
			    <a class="login-link" href="#">Lost your password?</a>
			</form>

			<br>

			<div class="btn-group btn-group-justified" role="group">
				<!-- SIGN UP -->
				<form class="btn-group" role="group">
  					<input type="submit" class="btn btn-inverse" value="Sign Up">
  				</form>

  				<!-- USE AS GUEST -->
  				<form class="btn-group" role="group" method="post" action="/home">
  					<input type="submit" class="btn btn-inverse" value="Use as Guest">
  				</form>
			</div>
	</div>

  	<!-- Link Javascript -->
	<script src="js/jquery-1.11.0.js"></script>
	<script src="js/bootstrap.js"></script>
	<script src="js/login-page.js"></script>

</body>
</html>
